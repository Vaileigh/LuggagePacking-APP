<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_identify_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_list"
    tools:context=".IdentityActivity">

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_editText"
        android:layout_alignStart="@+id/password_editText"
        android:layout_alignLeft="@+id/password_editText"
        android:layout_alignEnd="@+id/password_editText"
        android:layout_alignRight="@+id/password_editText"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:fontFamily="@font/advent_pro"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/verified_button"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/advent_pro"
        android:onClick="registerAcc"
        android:text="@string/register_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/verified_button"
        android:layout_alignStart="@+id/verified_button"
        android:layout_alignLeft="@+id/verified_button"
        android:layout_alignEnd="@+id/verified_button"
        android:layout_alignRight="@+id/verified_button"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/advent_pro"
        android:text="@string/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_editText"
        app:layout_constraintVertical_bias="0.139" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:fontFamily="@font/advent_pro"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="403dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="319dp"
        android:layout_height="319dp"
        android:layout_above="@+id/title2"
        android:layout_alignStart="@+id/title2"
        android:layout_alignLeft="@+id/title2"
        android:layout_alignEnd="@+id/title2"
        android:layout_alignRight="@+id/title2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="-1dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/logo_square" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="316dp"
        android:layout_height="59dp"
        android:layout_above="@+id/email_editText"
        android:layout_alignStart="@+id/email_editText"
        android:layout_alignLeft="@+id/email_editText"
        android:layout_alignEnd="@+id/email_editText"
        android:layout_alignRight="@+id/email_editText"
        android:layout_gravity="center"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="56dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="LUGGAGE PACKING GUIDE"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/emailVerification_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:layout_alignStart="@+id/password_editText"
        android:layout_alignLeft="@+id/password_editText"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/advent_pro"
        android:onClick="validate"
        android:text="Doesn't not receive verification email? Click HERE !"
        android:textColor="#FF9100"
        android:textSize="12sp"
        android:visibility="invisible" />


</RelativeLayout>