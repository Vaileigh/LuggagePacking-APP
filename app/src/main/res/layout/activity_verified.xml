<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_verified_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_list"
    tools:context=".VerifiedActivity">

    <TextView
        android:id="@+id/title2"
        android:layout_width="327dp"
        android:layout_height="59dp"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_gravity="center"
        android:layout_marginStart="-8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginEnd="-37dp"
        android:layout_marginRight="-37dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="LUGGAGE PACKING GUIDE"
        android:textSize="24sp" />

    <Button
        android:id="@+id/verified_button"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/advent_pro"
        android:text="confirm"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintVertical_bias="0.139" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="319dp"
        android:layout_height="319dp"
        android:layout_above="@+id/title2"
        android:layout_alignStart="@+id/title2"
        android:layout_alignLeft="@+id/title2"
        android:layout_alignEnd="@+id/title2"
        android:layout_alignRight="@+id/title2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/logo_square" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="81dp"
        android:layout_above="@+id/verified_button"
        android:layout_alignStart="@+id/verified_button"
        android:layout_alignLeft="@+id/verified_button"
        android:layout_alignEnd="@+id/verified_button"
        android:layout_alignRight="@+id/verified_button"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/advent_pro"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/advent_pro"
        android:text="An email verification mail will be sent to email below :"
        android:textSize="14sp" />


</RelativeLayout>